algoritmo "par_ou_impar"

var
   numero: real
inicio

      escreva("Digite um número: ")
      leia(numero)

      se (numero % 2 = 0) entao
         escreval("O valor digitado é um número par.")
      senao
           escreval("O valor digitado é um número ímpar.")
      fimse

fimalgoritmo
